{
  "manifest_version": 2,

  "name": "Lightbits Log Viewer",
  "description": "Shows a Lightbits JSON-formatted log file nicely",
  "version": "2.0",
  "background": {
    "scripts": ["backgroundcommon.js", "listener.js", "buttonhook.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["autodetect.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    "interpreter.css"
  ]
}
